<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lhmd.rechnerarchitektur.MainController">
  <children>
      <!-- in this line Hbox comes -->
      <fx:include source="toolbar.fxml" fx:id="toolbar"/>
    <SplitPane dividerPositions="0.7506" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
        <AnchorPane>
               <children>
                  <TableView fx:id="instructionsTableView" styleClass="instructionsTable, striped" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="breakpointColumn" resizable="false" prefWidth="40" styleClass="align-right">
                            <cellValueFactory>
                                <PropertyValueFactory property="breakpointSvgUrl" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn resizable="false" prefWidth="50" styleClass="align-right">
                            <cellValueFactory>
                                <PropertyValueFactory property="address" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn resizable="false" prefWidth="50" styleClass="align-right">
                            <cellValueFactory>
                                <PropertyValueFactory property="instruction" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn resizable="false" prefWidth="60" styleClass="align-right">
                            <cellValueFactory>
                                <PropertyValueFactory property="lineNumber" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn styleClass="align-left">
                            <cellValueFactory>
                                <PropertyValueFactory property="comment" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
        </AnchorPane>
        <AnchorPane>
          <children>
            <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" style="&#10;" text="Details" textAlignment="CENTER" wrapText="false">
                     <font>
                <Font size="18.0" fx:id="x1" />
                     </font>
                     <textFill>
                <Color red="0.624" green="0.624" blue="0.624" fx:id="x2" />
                     </textFill></Label>
